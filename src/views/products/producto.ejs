        <section class="contenedorProductos" id="contenedorProductos">
            <h2>춰Eleg칤 una de nuestras suscripciones y potenci치 tu negocio digitalmente!</h2>
            <img class="productos-img" src="/images/Producto-<%= product.id %>/<%= product.image %>" alt="imagen de una tienda">
                    <table>
                        <tr>
                            <th>
                                <div class="tdDiv">
                                    Beneficio
                                </div>
                            </th>
                        <% product.categoryImage.forEach (category => { %>
                            <th> 
                                <div class="contenedorMedalla tdDiv">
                                    <img class="medalla" src="/images/Producto-<%= product.id %>/<%= category %>" alt="imagen de medalla" style="align-self: center;">
                                </div>
                            </th>
                        <% }) %>
                        </tr>
                        <% for (let clave in product.benefits) { %>
                        <tr>  
                          <% for (let i = 0; i < product.benefits[clave].length; i++) { %>
                            <td class="beneficio">
                                <div class="tdDiv">
                                    <% if (product.benefits[clave][i] == "true") { %>
                                        <i class="fas fa-check"></i>
                                    <% } else if (product.benefits[clave][i] == null) { %>
                                        <i class="fas fa-times"></i>
                                    <% } else {%>
                                        <%= product.benefits[clave][i] %>
                                    <% } %>  
                                </div>
                            </td>
                         <% } %>
                        </tr>
                        <% } %>

                        <tr>
                            <td class="beneficio">
                                <div class="tdDiv">
                                    Subscribirse
                                </div>
                            </td>
                            <% for (let i=0; i < product.price.length; i++) { %>
                            <td>
                                <div class="tdDiv">
                                    <form action="/carrito" method="get">
                                        <button>
                                            <% if (typeof product.price[i] == 'number') { %>
                                                <%= '$ ' + product.price[i] %>
                                            <% } else { %>
                                                <%= product.price[i] %>
                                            <% } %>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            <% } %>
                        </tr>
