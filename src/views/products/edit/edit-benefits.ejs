<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/producto-style.css">
    <link rel="stylesheet" href="/stylesheets/crear-editar-style.css">
</head>

<%- include('../../partials/navbar') %>

<div class="creadorContainer">
    <h1 class="titulo">Editor de beneficios</h1>
    <div class="subtituloContenedor">
     <h2 class="subtitulo">Estás editando:</h2> <p class="subtitulo-producto"><%= productToEdit.name %></p>
</div>
    <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

        <section class="contenedorProductos" id="contenedorProductos">
            <table>
            <form action="/products" method="POST" enctype="multipart/form-data">
                <% var index = 0; %>
                <% productToEdit.Categories[0].Benefits.forEach(benefit => { %>          
                    <tr>
                        <td class="beneficio fontSize">
                            <div class="tdDiv">
                                <!--Elegir titulo beneficio 1-->
                                <label for="<%= indexBenefits[index] %>[0]">Beneficio:</label> <br>
                                <input class="inputBeneficio" type="text" name="<%= indexBenefits[index] %>[0]" <% if (typeof productToEdit != 'undefined' ) { %> <% if (productToEdit.Categories[0].Benefits[index] != undefined) { %> value="<%= productToEdit.Categories[0].Benefits[index].name %>" <% } } else { %> placeholder="Escribí aquí el beneficio" <% } %>>
                            </div>
                        </td>
                        <td>
                            <div class="tdDiv">
                                <input class="inputBeneficio" type="checkbox" name="<%= indexBenefits[index] %>[1]" value="true" style="align-self: center;" <% if (typeof productToEdit != 'undefined' && productToEdit.Categories[0].Benefits[index] != undefined) { %> checked <% } %>>
                            </div>
                        </td>
                        <td>
                            <div class="tdDiv">
                                <input class="inputBeneficio" type="checkbox" name="<%= indexBenefits[index] %>[2]" value="true" style="align-self: center;" <% if (typeof productToEdit != 'undefined' && productToEdit.Categories[1].Benefits[index] != undefined) { %> checked <% } %>>
                            </div>
                        </td>
                        <td>
                            <div class="tdDiv">
                                <input type="checkbox" name="<%= indexBenefits[index] %>[3]" value="true" style="align-self: center;" <% if (typeof productToEdit != 'undefined' && productToEdit.Categories[2].Benefits[index] != undefined) { %> checked <% } %>>
                            </div>
                        </td>
                    </tr>
                    <% index++ %>
                    <% }) %>
                </table>
        </section>

        <div class="buttons-form">
            <button type="reset" class="reset">Borrar campos</button>
            <button type="submit" class="submit">Enviar</button>
        </div>
    </form>
    <form action="/products/<%= productToEdit.id %>?_method=DELETE" method="POST">
        <div class="buttons-form">
            <button type="submit" class="delete">Eliminar producto</button>
        </div>
    </form>
</div>

<%- include('../../partials/footer') %>