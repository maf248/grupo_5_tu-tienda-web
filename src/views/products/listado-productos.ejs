<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="/stylesheets/listado-productos-style.css">
    <%- include('../partials/head') %>
</head>

<%- include('../partials/navbar') %>

<h1>Listado de productos:</h1>

<% products.forEach(producto => { %>
<section class="listaContenedor">

  <div class="productoListado">
  <a href="/products/<%= producto.id %>">
    <h2><%=producto.name%></h2>
    <img src="/images/Producto-<%= producto.id %>/<%= producto.image %>" alt="logo del producto" class="logoProducto">
  </a>
  <h3><%= producto.title_banner %></h3>
<table class="tabla-productos">
    <thead class=tabla-productos-titulos>
        <tr>
            <th><h2>Planes disponibles</h2></th>
            <% for(let i=0; i < producto.Categories.length; i++){ %>
              <td><img class="medalla" src="/images/Producto-<%= producto.id %>/<%= producto.Categories[i].image %>" alt="imagen de una medalla"><h3> <%= producto.Categories[i].name %> </h3></td>
            <% }; %>
        </tr>
    </thead>
    <tbody class=tabla-productos-cuerpo>
      <tr>
        <td><h4>Cantidad de secciones</h4></td>
        <% for (let i= 0; i < producto.Categories.length; i++) { %>

          <td>
            <p> <%= producto.Categories[i].web_sections %></p>
          </td>
        <% } %>
      </tr>
      <tr>
        <td><h4>Costo por transacción</h4></td>
        <% for (let i= 0; i < producto.Categories.length; i++) { %>

          <td>
            <p><%= producto.Categories[i].transaction_cost_percent %> %</p>
          </td>
        <% } %>
      </tr>
      <tr>
        <td><h4>Precio</h4></td>
        <% for (let i= 0; i < producto.Categories.length; i++) { %>

        <td>
          <% if (producto.Categories[i].price !== 0) { %>
          <p>$ <%= producto.Categories[i].price %></p>
          <% } else { %>
          <p>GRATIS</p>
          <% } %>
        </td>
        <% } %>
        
      </tr> 
    </tbody>
</table>
  <div class="botonesContenedor">
    <% if (locals.user != undefined) { %>
    <% if ( locals.user.adminCode ) { %>

    <a href="/products/<%= producto.id %>/edit" class="botones">Editar</a>

    <% }}  %>

    <div style="width: 1px;"></div>
    <a href="/products/<%= producto.id %>" class="botones">Ver más...</a>
    
  </div>
</div>
<% }); %>
<% if (locals.user != undefined) { %>
  <% if ( locals.user.adminCode ) { %>
  <div class="crear-contenedor">
    <a href="/products/create" class="boton-crear">Crear producto nuevo</a>
  </div>
  <% }}  %>
</section>



<%- include('../partials/footer') %>